{
    "$schema": "https://json-schema.org/schema#",
    "type": "object",
    "description":"These are minimal features that can be carried forward in an analysis.",
    "properties": {
        "mutually_exclusive_phenotype_strategies":{
            "type":"array",
            "description": "A set of mutually exclusive phenotypes.",
            "items":{
                "type":"object",
                "properties":{
                    "mutually_exclusive_strategy":{
                        "type":"array",
                        "description":"A single mutually exclusive strategy.",
                        "items":{
                            "type": "object",
                            "properties": {
                                "assigned_label":{
                                    "type": "string",
                                    "description":"The name given to the phenotype in InForm"
                                },
                                "label":{
                                    "type": "string",
                                    "description":"The label to carry forward"
                                },
                                "keep":{
                                    "type": "boolean",
                                    "default": true
                                }
                            },
                            "additionalProperties": false
                        }
                    }
                }
            }
        },
        "threshold_features":{
            "type":"array",
            "description": "The labels of mutually exclusive regions.",
            "items":{
                "type":"object",
                "properties": {
                    "inform_channel_label": {
                        "type": "string",
                        "description": "The string given in InForm"
                    },
                    "label": {
                        "type": "string",
                        "description": "The label to carry forward"
                    },
                    "keep": {
                        "type": "boolean",
                        "default": true
                    }
                },
                "additionalProperties": false
            }
        }
    },
    "additionalProperties": false
}